# openmcp Environment Variables

# Secret key for JWT tokens (change this in production!)
OPENMCP_SECRET_KEY=your-secret-key-change-this-in-production

# Server configuration
OPENMCP_HOST=0.0.0.0
OPENMCP_PORT=8000
OPENMCP_DEBUG=false
OPENMCP_LOG_LEVEL=INFO

# Service configuration
BROWSERUSE_HEADLESS=true
BROWSERUSE_TIMEOUT=30
BROWSERUSE_MAX_SESSIONS=5

# Web search service (Serper API)
SERPER_API_KEY=your-serper-api-key-here

# Web crawler service
WEB_CRAWLER_TIMEOUT=30
WEB_CRAWLER_MAX_CONTENT_LENGTH=1048576
